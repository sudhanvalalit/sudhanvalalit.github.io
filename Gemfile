source "https://rubygems.org"
gem "github-pages", "~> 232" # Keep this as it specifies the GitHub Pages environment
gem "jekyll", "3.10.0"       # Explicitly set Jekyll to the version GitHub Pages uses
gem "webrick", "~> 1.8"      # Required for Ruby 3.0+ to serve locally
gem "jekyll-feed", "~> 0.15" # For RSS feed support
gem "jekyll-seo-tag", "~> 2.7" # For SEO tags in the head
gem "jekyll-sitemap", "~> 1.4" # For generating a sitemap
gem "jekyll-paginate", "~> 1.1" # For pagination support
gem "jekyll-redirect-from", "~> 0.16" # For redirecting old URLs
gem "kramdown", "~> 2.3" # Markdown parser for Jekyll
gem "rouge", "~> 3.26" # Syntax highlighter for code blocks